<%= form_for(@expectation) do |f| %>
  <% if @expectation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@expectation.errors.count, "error") %> prohibited this expectation from being saved:</h2>

      <ul>
      <% @expectation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_field :content %>
  </div>
  <div class="field">
    <%= f.label :result %><br />
    <%= f.select :result, {"○" => "○", "☓" => "☓", "▲" => "▲"}, include_blank: true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
